<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="79" minHeight="29" 
             >
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
          
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    
    <!-- layer 2: fill -->
    <!--- @private -->
    <s:Rect id="fill" left="1" right="1" top="1" bottom="1">
        <s:fill>
            <s:SolidColor color="0xeeecec" 
						  color.over="0xb94827" 
						  color.down="0x85181b"
						  color.disabled="0xeeecec" 
						  />
        </s:fill>
    </s:Rect>
	
	<s:Rect id="borderDown" left="0" right="0" top="0" bottom="-1">
		<s:stroke>
			<s:SolidColorStroke weight="1"
								color="0xcfcdcd" 
								color.over="0xb94827" 
								color.down="0x85181b"
								color.disabled="0xeeecec" 
								/>
		</s:stroke>
	</s:Rect>


    <!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
    <!--- @private -->
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" width="69" height="20">
		<s:stroke>
			<s:SolidColorStroke weight="1"
								color="0xFFFFFF" 
								color.over="0xb94827" 
								color.down="0x85181b"
								color.disabled="0xeeecec" 
								/>
		</s:stroke>
	</s:Rect>
    
    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
    <s:Label id="labelDisplay"
             textAlign="left"
             maxDisplayedLines="1"
			 color="0x505050"
			 color.over="0xFFFFFF"
			 color.disabled="0xCFCDCD"
             horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
             left="10" right="10" top="2" bottom="2">
    </s:Label>
    
</s:SparkButtonSkin>