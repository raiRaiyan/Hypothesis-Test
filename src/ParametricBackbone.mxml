<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 currentState="state1">
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="center"/>
	</s:layout>
	
	<s:states>
		<s:State name="state1"/>
		<s:State name="state2"/>
		<s:State name="state3"/>
	</s:states>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="95%" height="60%" horizontalAlign="center" verticalAlign="middle">
		<s:Panel id="panel1" includeIn="state1,state2,state3" width="34%" height="90%"/>
		<s:Spacer width="12%"/>
		<s:Panel id="panel2" includeIn="state2,state3" width="34%" height="90%"/>
	</s:HGroup>
	<s:Spacer height="6%"/>
	<s:HGroup width="95%" height="30%" horizontalAlign="center" verticalAlign="middle">
		<s:Panel id="panel3" includeIn="state3" width="60%" height="90%"/>
		<s:Spacer width="15%"/>
		<s:Button width="100" height="50" label="Compute" id="calc" includeIn="state3"/>
	</s:HGroup>
	
	
</s:Group>
