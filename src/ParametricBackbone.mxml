<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 currentState="state1"
		 creationComplete="group1_creationCompleteHandler(event)">
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="center"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="state1"/>
		<s:State name="state2"/>
		<s:State name="state3"/>
	</s:states>
	
	<s:transitions>
		<s:Transition fromState="state1" toState="state2">
			<s:Parallel target="{panel2}">
				<s:Move3D zFrom="-100" duration="700"/>
				<s:Fade duration="500"/>
			</s:Parallel>
		</s:Transition>
		<s:Transition fromState="state2" toState="state3">
			<s:Parallel targets="{[panel3,calc]}">
				<s:Move3D zFrom="-100" duration="700"/>
				<s:Fade duration="500"/>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="95%" height="60%" horizontalAlign="center" verticalAlign="middle">
		<s:Panel includeIn="state1,state2,state3" width="34%" height="90%">
			<s:VGroup id="panel1" horizontalAlign="center" verticalAlign="middle">
				<s:Button label="click me" click="currentState='state2';"/>
			</s:VGroup>
		</s:Panel>
		<s:Spacer width="12%"/>
		<s:Panel id="panel2" includeIn="state2,state3" width="34%" height="90%">
			<s:Button label="click me" click="currentState='state3';"/>
		</s:Panel>
	</s:HGroup>
	<s:Spacer height="6%"/>
	<s:HGroup width="95%" height="30%" horizontalAlign="center" verticalAlign="middle">
		<s:Panel id="panel3" includeIn="state3" width="60%" height="90%"/>
		<s:Spacer width="15%"/>
		<s:Button width="100" height="50" label="Compute" id="calc" includeIn="state3"/>
	</s:HGroup>
</s:Group>
