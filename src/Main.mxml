<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   width="800"
					   height="600"
					   minHeight="600"
					   minWidth="800"
					   showStatusBar="false" xmlns:assets="assets.*">

	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
		<fx:XML xmlns="" id="stringCollection" source="strings/StringCollection.xml">
				
		</fx:XML>
	</fx:Declarations>
	
	<fx:Style source="headerStyle.css"/>
	
	<s:Group width="100%" height="100%" id="mainGroup">
		<s:layout>
			<s:BasicLayout/>
		</s:layout>
		<s:Label text="Hypothesis Testing"
				 styleName="titleHeader"
				 width="{mainGroup.width*0.96}"
				 height="40"
				 x="{mainGroup.width*0.02}"
				 y="25"/>
		
		<s:TextArea text="{stringCollection.mainScreenText.text}"
					borderVisible="false"
					width="{mainGroup.width*0.9}"
					height="100"
					x="{mainGroup.width*0.05}"
					y="75"
					fontWeight="bold"/>
	
		<s:Panel width="{mainGroup.width*0.3}"
				 height="{mainGroup.height*0.4}"
				 x="{mainGroup.width*0.35}"
				 y="{mainGroup.height*0.3}"
				 />		
	</s:Group>
</s:WindowedApplication>
